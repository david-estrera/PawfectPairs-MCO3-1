<%- include('partials/loginheader'); -%>

    <div class="container-fluid d-flex justify-content-center align-items-start" style="gap: 10vh; padding-top: 20vh;">

        <div class="proj-bg-white mr-4 mb-4 shadow p-3 mb-5 rounded w-25">
            <h1 class="text-center mb-2 sub-font proj-text-orange">Create an Account</h1>
            <form method="post" enctype="multipart/form-data">
                <label for="username">Username:</label>
                <input type="text" id="username" name="username" class="form-control mb-2" required>
        
                <label for="password">Password:</label>
                <input type="password" id="password" name="password" class="form-control mb-2" required>
        
                <label for="ownerName">Owner Name:</label>
                <input type="text" id="ownerName" name="ownerName" class="form-control mb-2" required>
        
                <label for="dogName">Dog Name:</label>
                <input type="text" id="dogName" name="dogName" class="form-control mb-2" required>
        
                <label for="dogBreed">Dog Breed:</label>
                <input type="text" id="dogBreed" name="dogBreed" class="form-control mb-2" required>
        
                <label for="location">Location:</label>
                <input type="text" id="location" name="location" class="form-control mb-2" required>
        
                <label for="about">About:</label><br>
                <textarea id="about" name="about" class="form-control mb-2" rows="4" cols="50" required></textarea><br>
        
                <label for="petImage">Image of Pet:</label>
                <input type="file" id="petImage" name="petImage" accept="image/*" class="form-control mb-2" required><br>
        
                <button class="btn btn-outline-primary" type="submit">Sign Up</button>
              </form>

            </div>
            <p class="text-center text-muted mt-3 mb-0 sub-font">Have already an account? <a href="/"
                    class="fw-bold text-body"><u>Login here</u></a></p>

        </div>


    </div>

<%- include('partials/loginfooter'); -%>
